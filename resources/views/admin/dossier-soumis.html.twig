  <script type="text/javascript">
    $(document).ready(function() {
      if($('#check-box-paiement').is(':checked')){
        $('.check-me').show();
      }
      else{
        $('.check-me').hide();
      }
      $('#check-box-paiement').change(function(){
        if($(this).is(':checked')){
          $('.check-me').show();
        }
        else{
          $('.check-me').hide();
        }
      });
    });
  </script>
{% endblock %}
