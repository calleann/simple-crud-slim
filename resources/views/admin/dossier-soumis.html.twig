                  <td><input type="text" name="" style="width:100%;" value=""></td>
                  <td><a href="{{path_for('demande.delete',{'id': dossier.id,'key':'architecte' })}}" onclick="return confirm('Voulez vous retirer ce document du dossier?');"><button type="button" class="btn btn-danger" {{dossier.etat.valide == 1 ? 'disabled':''}} >Rejeter</button></a></td>
                </tr>
                <!--8-->
                <tr>
                  <td><label>fiche technique</label></td>
                  <td><a target="_blank" href="../../../dossiers/{{dossier.user.id}}/{{dossier.dossierable.fiche_technique}}">{{dossier.dossierable.fiche_technique}}</a></td>
                  <td><input type="text" name="" style="width:100%;" value=""></td>
                  <td><a href="{{path_for('demande.delete',{'id': dossier.id,'key':'fiche_technique' })}}" onclick="return confirm('Voulez vous retirer ce document du dossier?');"><button type="button" class="btn btn-danger" {{dossier.etat.valide == 1 ? 'disabled':''}} >Rejeter</button></a></td>
