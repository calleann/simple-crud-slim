                </tr>
                <!--10-->
                <tr>
                  <td><label>notice de sécurité</label></td>
                  <td><a target="_blank" href="../../../dossiers/{{dossier.user.id}}/{{dossier.dossierable.notice_securite}}">{{dossier.dossierable.notice_securite}}</a></td>
