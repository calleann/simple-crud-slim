{% extends 'templates/app.html.twig' %}

{% block content%}
  <!-- {{users | json_encode}} -->
  <div class="col-lg-12">
    <h1>Les utilisateurs</h1>
    <div class="row">
      <table class="table table-striped">
        <thead>
          <th>Id</th>
          <th>Nom du Rep.</th>
          <th>C.I.N</th>
          <th>Societe</th>
          <th>Tél.</th>
          <th>Statut de dossier</th>
          <th>Dossier</th>
          <th>Libérer le dossier</th>
        </thead>
        <tbody>
          {% for user in users%}
            <tr>
              <td>{{user.id}}</td>
              <td>{{user.name}}</td>
              <td>{{user.cin}}</td>
              <td>{{user.societe}}</td>
              <td>{{user.num_tel}}</td>
              <td>{{user.dossier.statut}}</td>
              <td><a href="{{path_for('admin.dossier',{'id': user.dossier.id,'type': user.dossier.user.type})}}">Consulter</a></td>
              <td><a href="#">{% if user.dossier.statut == -4 %}<button type="button" class="btn btn-danger" name="button">Libérer</button></a>{% endif %}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

  <script type="text/javascript">
  $(document).ready(function () {
    $('.table').dataTable({
      // "paging":   ,
      "info":   false,
      "bLengthChange": false,
      "pageLength" : 10,
    });
  });
  </script>
{% endblock %}
