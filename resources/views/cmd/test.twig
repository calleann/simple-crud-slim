{% extends 'templates/app.twig' %}

{%block content%}
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
          <div class="panel-heading"><strong>Dossier</strong></div>
          <div class="panel-body">

            <form class="form-signin" action="{{path_for('demande.test')}}" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <label for="test1">fichier N1:</label><br>
                <label class="btn btn-primary" for="test1">
                    <input id="test1" type="file" name="test1" style="display:none;" onchange="$('#upload-file-info-1').html($(this).val());">
                    Charger ici
                </label>
                <span class='label label-info' id="upload-file-info-1"></span>
              </div>
              <div class="form-group">
                <label for="test1">fichier N2:</label><br>
                <label class="btn btn-primary" for="test2">
                    <input id="test2" type="file" name="test2" style="display:none;" onchange="$('#upload-file-info-2').html($(this).val());">
                    Charger ici
                </label>
                <span class='label label-info' id="upload-file-info-2"></span>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
  </div>
{% endblock %}
