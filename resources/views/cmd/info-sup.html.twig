{% extends 'templates/app.html.twig' %}

{% block content %}
    <div class="col-lg-12">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading"><strong>Décision d'installation à TFZ</strong></div>
          <div class="panel-body">
            <div class="col-lg-8 col-lg-offset-2">
                <br>
                <form  action="{{path_for('demande.user')}}" method="post">
                  <div class="disable-stuff">
                    <div class="form-group {{error.num_decision ? 'has-error':''}}">
                      <label for="num_decision">Numéro de décision :</label>
                      <input type="text" name="num_decision" class="form-control" id="num_decision" value="{{num_decision ? num_decision:''}}" required {{ num_decision != 0 ? "disabled":""}}>
                      {% if error.num_decision %}<span class="help-block" style="font-size:0.7em">{{error.num_decision | first}}</span>{% endif %}
                    </div>
                    <div class="form-group {{error.date_decision ? 'has-error':''}}">
                      <label for="date_decision">Date de décision:</label>
                      <input type="date" name="date_decision" class="form-control" id="date_decision" value="{{num_decision ? date_decision:''}}" required {{ num_decision != 0 ? "disabled":""}}>
                      {% if error.date_decision %}<span class="help-block" style="font-size:0.7em">{{error.date_decision | first}}</span>{% endif %}
                    </div>
                    <div class="form-group {{error.activite ? 'has-error':''}}">
                      <label for="activite">Secteur d'activité:</label>
                      <textarea name="activite" rows="5" style="width:100%" id="activite" placeholder="Secteur ...." {{ num_decision != 0 ? "disabled":""}} required>{{num_decision ? activite:''}}</textarea>
                      {% if error.activite %}<span class="help-block" style="font-size:0.7em">{{error.activite | first}}</span>{% endif %}
                    </div>
                    <div class="col-lg-offset-5">
                      <button type="submit" {{ num_decision != 0 ? "disabled":""}} class="btn btn-primary">Envoyer</button>
                    </div>
                  </div>
                </form>

            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
