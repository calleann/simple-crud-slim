{% extends 'templates/app.html.twig' %}

{%block content%}

    <div class="col-md-6 col-md-offset-3">
      {% if erreur %}
        <div class="row">
          <div class="alert alert-danger" role="alert">
            <i>{{erreur}}</i>
          </div>
        </div>
      {% endif %}
      <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><strong>Changer votre mot de passe</strong></div>
            <div class="panel-body">
            <form class="form-signin" action="{{path_for('auth.change-password',{'selector': selector })}}" method="post">
              <div class="form-group">
                <label for="pwd">Votre nouveau mot de passe:</label>
                <input type="password" name="password" class="form-control" id="pwd">
              </div>
              <div class="form-group">
                <label for="pwd1">Confirmer le nouveau mot de passe:</label>
                <input type="password" name="confirm_password" class="form-control" id="pwd1">
              </div>
              <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
            </form>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
