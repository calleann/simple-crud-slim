{% extends 'templates/app.html.twig' %}

{%block content%}
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading"><strong>Sign in</strong></div>
        <div class="panel-body">

          <form class="form-signin" action="{{path_for('auth.signin')}}" method="post">
            <div class="form-group">
              <label for="email">Adresse Email:</label>
              <input type="email" name="email" class="form-control" id="email" placeholder="your@domain.com">
            </div>
            <div class="form-group">
              <label for="pwd">Password:</label>
              <input type="password" name="password" class="form-control" id="pwd">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
{% endblock %}
