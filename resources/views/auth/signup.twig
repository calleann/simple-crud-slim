{% extends 'templates/app.twig' %}

{%block content%}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading"><strong>Sign up</strong></div>
        <div class="panel-body">
           <!-- {{error | json_encode }}  -->
          <form class="form-signup" action="{{path_for('auth.signup')}}" method="post">
            <div class="form-group {{error.email ? 'has-error':''}}">
              <label for="email">Email address:</label>
              <input type="text" name="email" class="form-control" id="email" placeholder="your@domain.com">
              {% if error.email %}<span class="help-block">{{error.email | first}}</span>{% endif %}
            </div>
            <div class="form-group {{error.name ? 'has-error':''}}">
              <label for="name">Name:</label>
              <input type="text" name="name" class="form-control" id="name">
              {% if error.name %}<span class="help-block">{{error.name | first}}</span>{% endif %}
            </div>
            <div class="form-group {{error.password ? 'has-error':''}}">
              <label for="pwd">Password:</label>
              <input type="password" name="password" class="form-control" id="pwd">
              {% if error.password %}<span class="help-block">{{error.password | first}}</span>{% endif %}
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
